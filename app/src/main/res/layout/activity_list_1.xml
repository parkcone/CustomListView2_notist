<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="10dp"
    android:paddingLeft="5dp"
    android:paddingRight="5dp"
    android:paddingTop="10dp"
    android:layout_margin="20dp"
    tools:ignore="ExtraText"
    android:background="#ffffff">

    <ImageButton
        android:layout_width="77.23px"
        android:layout_height="77.23px"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="82px"
        android:layout_marginTop="51px"
        android:background="@null"
        android:src="@drawable/search_icon_last">
    </ImageButton>



    <TextView
        android:id="@+id/title_file"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/nanum_square_regular"
        android:text="파일"
        android:textSize="51px"
        android:layout_marginTop="51px"
        android:layout_alignParentLeft="true"
        android:layout_marginRight="420px"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="420px"
        android:textColor="#000000">

    </TextView>


    //전환버튼
    <ImageButton
        android:layout_marginTop="127px"
        android:id="@+id/text_button_list"
        android:layout_width="233px"
        android:layout_height="79px"
        android:layout_below="@+id/title_file"
        android:layout_alignParentLeft="true"
        android:layout_marginRight="48px"
        android:background="@null"
        android:src="@drawable/list_states">
    </ImageButton>

    <ImageButton
        android:layout_marginTop="127px"
        android:id="@+id/textbutton_2"
        android:layout_width="233px"
        android:layout_height="79px"
        android:layout_below="@+id/title_file"
        android:layout_toRightOf="@+id/text_button_list"
        android:background="@null"
        android:src="@drawable/bookmark_states"
        android:layout_marginRight="116px">
    </ImageButton>



    <ListView
        android:id="@+id/list_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/text_button_list"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/nanum_square_regular"
        android:textFilterEnabled="true" />

</RelativeLayout>